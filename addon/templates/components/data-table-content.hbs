{{#if rows}}
  <table class="data-table responsive-table">
    {{yield (hash
      header=(component 'data-table-content-header' enableSelection=enableSelection)
      body=(component 'data-table-content-body' rows=rows enableSelection=enableSelection)
      )}}
  </table>
{{else}}
  <p>{{noDataMessage}}</p>
{{/if}}
