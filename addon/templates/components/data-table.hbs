{{#if hasSearch}}
  {{text-search filter=filter auto=autoSearch}}
{{/if}}

{{#if hasBlock}}
  {{yield (hash
    menu=(component 'data-table-menu' data-table=this)
    content=(component 'data-table-content' content=content noDataMessage=noDataMessage enableSelection=enableSelection enableLineNumbers=enableLineNumbers data-table=this)
    )
    this}}
{{else}}
  {{component 'data-table-content' content=content noDataMessage=noDataMessage enableSelection=enableSelection enableLineNumbers=enableLineNumbers data-table=this}}
{{/if}}

{{#if hasPagination}}
  {{#if isNumberPagination}}
    {{number-pagination page=page range=range links=content.meta.pagination}}
  {{else}}
    {{page-pagination page=page links=content.meta.pagination}}
  {{/if}}
{{/if}}
